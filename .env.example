# vAlgo Trading System Environment Configuration
# Copy this file to .env and update with your actual values

# ======================
# OpenAlgo Configuration
# ======================
OPENALGO_URL=http://localhost:5000
OPENALGO_API_KEY=your_openalgo_api_key_here

# ======================
# Database Configuration
# ======================
DATABASE_URL=data/vAlgo.db
DATABASE_TYPE=duckdb

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FILE=logs/vAlgo.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ======================
# Broker API Keys (Optional - if using direct broker APIs)
# ======================
# Zerodha
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
ZERODHA_USER_ID=your_zerodha_user_id

# Angel One
ANGEL_ONE_API_KEY=your_angel_one_api_key
ANGEL_ONE_CLIENT_CODE=your_angel_one_client_code
ANGEL_ONE_PASSWORD=your_angel_one_password
ANGEL_ONE_TOTP_SECRET=your_angel_one_totp_secret

# Dhan
DHAN_CLIENT_ID=your_dhan_client_id
DHAN_ACCESS_TOKEN=your_dhan_access_token

# Upstox
UPSTOX_API_KEY=your_upstox_api_key
UPSTOX_API_SECRET=your_upstox_api_secret
UPSTOX_REDIRECT_URI=http://localhost:8080

# ======================
# Notifications (Future Enhancement)
# ======================
# Telegram and other notification systems can be added later

# ======================
# Trading Configuration
# ======================
DEFAULT_CAPITAL=100000
DEFAULT_RISK_PER_TRADE=0.02
MAX_CONCURRENT_TRADES=5
PAPER_TRADING=true

# ======================
# Data Configuration
# ======================
DATA_REFRESH_INTERVAL=60
MAX_HISTORICAL_DAYS=365
CACHE_ENABLED=true
CACHE_EXPIRY_HOURS=1

# ======================
# Performance Configuration
# ======================
MAX_WORKERS=4
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=10
RETRY_ATTEMPTS=3

# ======================
# Development Settings
# ======================
DEBUG=false
TESTING=false
ENVIRONMENT=development